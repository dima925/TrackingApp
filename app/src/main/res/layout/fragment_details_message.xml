<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xs.android.tesseract.fragment.DetailsMessageFragment"
    android:touchscreenBlocksFocus="false"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_messageTitle"
        android:text="Message Title"
        android:textSize="@dimen/bootstrap_h3_text_size"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_messageContent"
        android:text="Message content"
        android:textSize="@dimen/bootstrap_h4_text_size"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

